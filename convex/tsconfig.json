{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2021"],
    "strict": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noEmit": true
  },
  "include": ["**/*.ts"],
  "exclude": ["_generated", "**/*.js"]
}